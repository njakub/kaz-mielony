---
import Analytics from '@vercel/analytics/astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cooking meals inspired by iconic historical figures" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Kaz Mielony</title>
  </head>
  <body class="bg-background text-text-light">
    <header class="bg-dark border-b border-primary/20">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/" class="text-xl sm:text-2xl font-bold text-primary">Kaz Mielony</a>
          </div>
          <div class="flex items-center space-x-3 sm:space-x-6 lg:space-x-8">
            <a href="/" class="text-sm sm:text-base text-text-light hover:text-primary transition-colors whitespace-nowrap">Home</a>
            <a href="/recipes" class="text-sm sm:text-base text-text-light hover:text-primary transition-colors whitespace-nowrap">Recipes</a>
            <a href="/episodes" class="text-sm sm:text-base text-text-light hover:text-primary transition-colors whitespace-nowrap">Episodes</a>
            <a href="/tier-list" class="text-sm sm:text-base text-text-light hover:text-primary transition-colors whitespace-nowrap">Tier List</a>
            <a href="/about" class="text-sm sm:text-base text-text-light hover:text-primary transition-colors whitespace-nowrap">About</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-dark border-t border-primary/20 text-text-light mt-16">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-bold mb-4 text-primary">Kaz Mielony</h3>
            <p class="text-text-light/70">Exploring history through the meals of iconic figures.</p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4 text-primary">Quick Links</h3>
            <ul class="space-y-2 text-text-light/70">
              <li><a href="/recipes" class="hover:text-primary transition-colors">All Recipes</a></li>
              <li><a href="/episodes" class="hover:text-primary transition-colors">Episodes</a></li>
              <li><a href="/tier-list" class="hover:text-primary transition-colors">Tier List</a></li>
              <li><a href="/about" class="hover:text-primary transition-colors">About</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4 text-primary">Follow</h3>
            <ul class="space-y-2 text-text-light/70">
              <li><a href="https://www.youtube.com/@KazMielony" class="hover:text-primary transition-colors">YouTube</a></li>
              <li><a href="https://instagram.com/kazmielony" class="hover:text-primary transition-colors">Instagram</a></li>
              <li><a href="https://twitter.com/kazmielony" class="hover:text-primary transition-colors">Twitter</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-primary/20 mt-8 pt-8 text-center text-muted">
          <p>&copy; 2024 Kaz Mielony. All rights reserved.</p>
        </div>
      </div>
    </footer>
    <Analytics />
  </body>
</html>
