---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import RecipeCard from '../../components/RecipeCard.astro';

const recipes = await getCollection('recipes');
const sortedRecipes = recipes.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<Layout title="All Recipes">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-text-light mb-4">All Recipes</h1>
      <p class="text-lg text-text-light/80">
        Discover meals inspired by history's most fascinating figures ({recipes.length} recipes)
      </p>
    </header>

    <!-- Recipes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedRecipes.map((recipe) => (
        <RecipeCard recipe={recipe} />
      ))}
    </div>

    {recipes.length === 0 && (
      <div class="text-center py-16">
        <p class="text-muted text-lg">No recipes found. Check back soon for new content!</p>
      </div>
    )}
  </div>
</Layout>
