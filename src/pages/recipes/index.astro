---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import RecipeCard from '../../components/RecipeCard.astro';

const recipes = await getCollection('recipes');
const sortedRecipes = recipes.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

// Get unique values for filters
const mealTypes = [...new Set(recipes.map(recipe => recipe.data.mealType))];
const difficulties = [...new Set(recipes.map(recipe => recipe.data.difficulty))];
const figures = [...new Set(recipes.map(recipe => recipe.data.historicalFigure))];
---

<Layout title="All Recipes">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">All Recipes</h1>
      <p class="text-lg text-gray-600">
        Discover meals inspired by history's most fascinating figures
      </p>
    </header>

    <!-- Filter Section (Static for now, can be enhanced with React component) -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
      <h3 class="text-lg font-semibold mb-4">Filter by:</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <h4 class="font-medium text-gray-700 mb-2">Meal Type</h4>
          <div class="space-y-1">
            {mealTypes.map(type => (
              <label class="flex items-center">
                <input type="checkbox" value={type} class="mr-2" />
                <span class="capitalize">{type}</span>
              </label>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-medium text-gray-700 mb-2">Difficulty</h4>
          <div class="space-y-1">
            {difficulties.map(difficulty => (
              <label class="flex items-center">
                <input type="checkbox" value={difficulty} class="mr-2" />
                <span class="capitalize">{difficulty}</span>
              </label>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-medium text-gray-700 mb-2">Historical Figure</h4>
          <div class="space-y-1 max-h-32 overflow-y-auto">
            {figures.map(figure => (
              <label class="flex items-center">
                <input type="checkbox" value={figure} class="mr-2" />
                <span class="text-sm">{figure}</span>
              </label>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Recipes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedRecipes.map((recipe) => (
        <RecipeCard recipe={recipe} />
      ))}
    </div>

    {recipes.length === 0 && (
      <div class="text-center py-16">
        <p class="text-gray-500 text-lg">No recipes found. Check back soon for new content!</p>
      </div>
    )}
  </div>
</Layout>
